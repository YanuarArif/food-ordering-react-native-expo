{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".", // Bagian langkah dari: Mengatur supaya bisa menerapkan @components, @dll
    "paths": {
      "@components/*": ["src/components/*"], // Bagian langkah dari: Mengatur supaya bisa menerapkan @components, @dll
      "@assets/*": ["assets/*"], // Bagian langkah dari: Mengatur supaya bisa menerapkan @components, @dll
      "@/*": ["src/*"],
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
